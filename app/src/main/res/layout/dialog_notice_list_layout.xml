<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_corner_nomal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notice_snap_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_blue"
        android:gravity="center"
        android:padding="15dp"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/notice_snap_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxHeight="300dp"
        android:maxLength="280"
        android:minHeight="80dp"
        android:padding="20dp"
        android:textColor="@color/font_black"
        android:textSize="17sp"
        android:visibility="gone"
        tools:text="@string/large_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notice_snap_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="25dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/notice_snap_close_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/close"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
