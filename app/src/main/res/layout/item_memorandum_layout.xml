<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_weight="1"
    android:background="@drawable/shape_rounded_corner_white">

    <View
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_rounded_corner_green" />

    <TextView
        android:id="@+id/item_memorandum_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/first_volunteer"
        android:textColor="@color/font_black2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_memorandum_round_txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_red_round"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white" />
</FrameLayout>

