<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/item_memorandum_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/shape_rounded_corner_green"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/first_volunteer"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_memorandum_round_txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_red_round"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white" />
</FrameLayout>

