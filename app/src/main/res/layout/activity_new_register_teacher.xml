<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="bag.small.ui.activity.NewRegisterTeacherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/ac_new_teacher_head_iv"
            style="@style/head_image_style" />

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_name_tv"
                        style="@style/style_tv"
                        android:layout_marginEnd="10dp"
                        android:text="名字:" />

                    <TextView
                        android:id="@+id/new_register_type_tv"
                        style="@style/style_tv"
                        android:layout_marginStart="10dp"
                        android:text="类型:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_school_tv"
                        style="@style/style_tv"
                        android:text="学校:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_number_tv"
                        style="@style/style_tv"
                        android:text="工号:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_email_tv"
                        style="@style/style_tv"
                        android:text="邮箱:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_birthday_tv"
                        style="@style/style_tv"
                        android:text="生日:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_gender_tv"
                        style="@style/style_tv"
                        android:text="性别:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_class_teacher_tv"
                        style="@style/style_tv"
                        android:text="班主任:" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任课:"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/new_register_class_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:orientation="vertical">

                        <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:textSize="16sp" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
