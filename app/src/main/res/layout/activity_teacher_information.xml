<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="bag.small.ui.activity.TeacherInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/ac_teacher_head_iv"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:background="@mipmap/border_input_bg"
            android:orientation="vertical"
            android:padding="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_teacher_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="@string/teacher_name_str"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingEnd="0dp"
                        android:paddingStart="2dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/activity_teacher_phone_edit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="@string/parent_contact_number_hint"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingEnd="0dp"
                        android:paddingStart="2dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_teacher_verification_code_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/login_code_hint_edt_str"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingEnd="0dp"
                        android:paddingStart="3dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/activity_teacher_send_code_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:background="@color/white"
                        android:text="@string/get_code_str"
                        android:textColor="@color/button_green"
                        android:textSize="12sp" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <LinearLayout
                    android:id="@+id/activity_area_school_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/activity_area_school_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start"
                        android:text="学校区域"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/imge_down_style"
                        android:src="@mipmap/arrow_icon" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <LinearLayout
                    android:id="@+id/activity_guardian_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/activity_guardian_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical|start"
                        android:text="@string/school_name_str"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/imge_down_style"
                        android:src="@mipmap/arrow_icon" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <LinearLayout
                    android:id="@+id/activity_charge_class_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/activity_charge_class_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:gravity="center_vertical|start"
                        android:text="是否担任班主任："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activity_is_teacher_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="是" />

                    <ImageView
                        style="@style/imge_down_style"
                        android:src="@mipmap/arrow_icon" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <LinearLayout
                    android:id="@+id/activity_teacher_class_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="3dp">


                        <TextView
                            android:id="@+id/ac_teacher_number_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableEnd="@mipmap/arrow_icon"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:paddingEnd="15dp"
                            android:paddingStart="0dp"
                            android:text="届数" />


                    <TextView
                        android:id="@+id/ac_teacher_grade_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/arrow_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:paddingEnd="15dp"
                        android:paddingStart="0dp"
                        android:text="年级" />

                    <TextView
                        android:id="@+id/ac_teacher_class_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/arrow_icon"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:paddingEnd="15dp"
                        android:paddingStart="0dp"
                        android:text="班级" />
                </LinearLayout>

                <View style="@style/view_line_gray_style" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_teacher_subject_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/activity_teacher_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:background="@drawable/shape_ac_login_btn_back_fill"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
