<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_corner_nomal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notice_snap_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_blue"
        android:gravity="center"
        android:padding="15dp"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notice_snap_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxHeight="280dp"
        android:maxLength="280"
        android:minHeight="180dp"
        android:padding="20dp"
        android:text="@string/large_text"
        android:textColor="@color/font_black"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notice_snap_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/notice_snap_close_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/close"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
