<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="bag.small.ui.activity.InterestClassByStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <com.youth.banner.Banner
            android:id="@+id/activity_interest_class_student_banner"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:image_scale_type="center_crop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/heart_icon"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="23dp"
            android:text="@string/you_can_choice_the_interest_class_str"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="23dp"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/one_icon"
                android:gravity="center_vertical"
                android:text="@string/first_volunteer"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_interest_class_one_content_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingEnd="0dp"
                android:paddingStart="25dp"
                android:ellipsize="end"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/activity_interest_class_one_del_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/delete_circle"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="23dp"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/two_icon"
                android:gravity="center_vertical"
                android:text="@string/two_volunteer"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_interest_class_two_content_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingEnd="0dp"
                android:ellipsize="end"
                android:paddingStart="25dp"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/activity_interest_class_two_del_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/delete_circle"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="23dp"
                android:drawablePadding="15dp"
                android:drawableStart="@mipmap/three_icon"
                android:gravity="center_vertical"
                android:text="@string/three_volunteer"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_interest_class_three_content_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingEnd="0dp"
                android:ellipsize="end"
                android:paddingStart="25dp"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/activity_interest_class_three_del_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/delete_circle"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_interest_class_commit_btn"
            android:layout_width="107dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_ac_login_btn_back_fill"
            android:gravity="center"
            android:text="@string/committed_str"
            android:textColor="@color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_interest_class_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
