<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="3dp">

        <TextView
            android:id="@+id/item_subject_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|start"
            android:paddingEnd="0dp"
            android:text="教授学科"
            android:textSize="16sp" />

        <ImageView
            style="@style/imge_down_style"
            android:src="@mipmap/arrow_icon" />

        <ImageView
            android:id="@+id/item_subject_add_iv"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            android:src="@mipmap/add_line_circle" />
    </LinearLayout>

    <View style="@style/view_line_gray_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/item_teacher_number_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/arrow_icon"
            android:drawablePadding="40dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingStart="0dp"
            android:text="届数" />

        <TextView
            android:id="@+id/item_teacher_grade_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/arrow_icon"
            android:gravity="center"
            android:drawablePadding="40dp"
            android:paddingEnd="15dp"
            android:paddingStart="0dp"
            android:text="年级" />

        <TextView
            android:id="@+id/item_teacher_class_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/arrow_icon"
            android:drawablePadding="40dp"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingStart="0dp"
            android:text="班级" />

        <ImageView
            android:id="@+id/item_class_add_num_iv"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            android:src="@mipmap/add_line_circle"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
