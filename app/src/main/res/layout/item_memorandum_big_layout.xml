<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_rounded_corner_white"
    android:elevation="2dp">

    <TextView
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_rounded_corner_green"
        android:maxEms="1" />

    <TextView
        android:id="@+id/item_memorandum_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:textColor="@color/font_black2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_memorandum_round_txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_red_round"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="-3dp"
        android:lineSpacingMultiplier="1"
        android:lines="2"
        android:maxEms="2"
        android:text="20\n未读"
        android:textColor="@color/white"
        android:textSize="10sp" />
</FrameLayout>

