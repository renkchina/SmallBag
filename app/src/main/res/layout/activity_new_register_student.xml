<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="bag.small.ui.activity.NewRegisterstudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/ac_new_student_head_iv"
            style="@style/head_image_style"
            />

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_name_tv"
                        style="@style/style_tv"
                        android:layout_marginEnd="10dp"
                        android:text="名字:" />

                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_type_tv"
                        style="@style/style_tv"
                        android:text="类型：学生" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_school_tv"
                        style="@style/style_tv"
                        android:text="学校:" />
                </LinearLayout>


                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_number_tv"
                        style="@style/style_tv"
                        android:text="年级:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_class_tv"
                        style="@style/style_tv"
                        android:text="班级:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_class_student_tv"
                        style="@style/style_tv"
                        android:text="学号:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_birthday_tv"
                        style="@style/style_tv"
                        android:text="生日:" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_info">

                    <TextView
                        android:id="@+id/new_register_student_gender_tv"
                        style="@style/style_tv"
                        android:text="性别:" />
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
