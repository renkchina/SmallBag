<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="bag.small.ui.activity.MainActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/activity_main_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/activity_main_content_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/activity_main_content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </FrameLayout>

                <ImageView
                    android:id="@+id/activity_click_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:elevation="12dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </FrameLayout>

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/activity_main_bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemIconTint="@drawable/bottom_navigation_selector"
                app:itemTextColor="@drawable/bottom_navigation_selector"
                app:menu="@menu/main_bottom_nav_menu">
            </android.support.design.widget.BottomNavigationView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_left_ll"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_drawer_left_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/main_drawer_left_add_account_btn"
                android:layout_width="164dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:background="@drawable/shape_ac_login_btn_back_fill"
                android:text="+添加角色"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_drawer_left_account_manager_tv"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@mipmap/account_manager"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="46dp"
                android:text="@string/main_account_manager"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_drawer_left_soft_setting_tv"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:drawableStart="@mipmap/soft_setting"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="46dp"
                android:text="@string/main_soft_setting"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_drawer_left_help_tv"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:drawableStart="@mipmap/help_me"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="46dp"
                android:text="@string/main_help_str"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_drawer_left_about_tv"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:drawableStart="@mipmap/about_ours"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="46dp"
                android:text="关于"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_drawer_left_exit_tv"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:drawableStart="@mipmap/exit_system"
                android:gravity="center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="46dp"
                android:text="退出"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
