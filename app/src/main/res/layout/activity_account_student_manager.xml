<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ac_account_student_head_iv"
                    style="@style/head_image_style" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"
                    android:background="@mipmap/check_image" />
            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            android:padding="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_ll_info"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="姓名:" />

                    <TextView
                        android:id="@+id/activity_account_student_name_tv"
                        style="@style/style_tv" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@color/un_enable_gray" />

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="性别:" />

                    <TextView
                        android:id="@+id/activity_account_student_gender_tv"
                        style="@style/style_tv" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/un_enable_gray" />


                <LinearLayout
                    style="@style/style_ll_info"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="出生日期：" />

                    <TextView
                        android:id="@+id/activity_account_student_birthday_tv"
                        style="@style/style_tv"
                        android:gravity="start|center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/un_enable_gray" />

                <LinearLayout
                    style="@style/style_ll_info"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="学校:" />

                    <TextView
                        android:id="@+id/activity_account_student_school_tv"
                        style="@style/style_tv"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@color/un_enable_gray" />

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="班级:" />

                    <TextView
                        android:id="@+id/activity_account_student_class_tv"
                        style="@style/style_tv" />
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/style_ll_info"
                    android:background="@color/green_bg"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="学号：" />

                    <EditText
                        android:id="@+id/activity_account_student_number_tv"
                        style="@style/style_tv"
                        android:background="@color/green_bg"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:lines="1"
                        android:textColor="@color/txt_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/un_enable_gray" />

                <LinearLayout
                    style="@style/style_ll_info"
                    android:background="@color/green_bg"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="学籍号：" />

                    <EditText
                        android:id="@+id/activity_account_student_xueji_number_tv"
                        style="@style/style_tv"
                        android:background="@color/green_bg"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:lines="1"
                        android:textColor="@color/txt_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/un_enable_gray" />

                <LinearLayout
                    style="@style/style_ll_info"
                    android:background="@color/green_bg"
                    android:paddingStart="15dp">

                    <TextView
                        style="@style/style_tv_wrap"
                        android:text="身份证号：" />

                    <EditText
                        android:id="@+id/activity_account_student_id_tv"
                        style="@style/style_tv"
                        android:background="@color/green_bg"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/txt_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardview_style"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:visibility="gone"
            android:id="@+id/password_card_view"
            app:contentPadding="0dp">

            <LinearLayout
                style="@style/style_ll_info"
                android:background="@color/green_bg"
                android:paddingStart="15dp">

                <TextView
                    style="@style/style_tv_wrap"
                    android:text="新密码：" />

                <EditText
                    android:id="@+id/activity_account_student_agree_pwd_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/green_bg"
                    android:hint="请输入密码"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:textColor="@color/txt_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/activity_account_student_commit_btn"
            style="@style/btn_circle_style"
            android:text="确认" />
    </LinearLayout>
</ScrollView>
